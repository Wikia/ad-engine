{
	"name": "@wikia/ad-engine",
	"version": "146.0.0",
	"description": "Wikia AdEngine",
	"license": "Apache-2.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/Wikia/AdEngine"
	},
	"dependencies": {
		"@wikia/dependency-injection": "2.2.3",
		"@wikia/instant-config-loader": "github:Wikia/instant-config-loader#semver:0.9.1",
		"@wikia/post-quecast": "2.0.1",
		"blockadblock": "3.2.1",
		"current-device": "0.10.2",
		"js-cookie": "3.0.1",
		"rxjs": "7.8.0",
		"ts-action": "11.0.0",
		"ts-action-operators": "9.1.2",
		"ts-loader": "9.4.2",
		"uuid": "9.0.0"
	},
	"devDependencies": {
		"@alugha/ima": "2.1.0",
		"@stardazed/streams-polyfill": "2.4.0",
		"@types/chai": "4.3.4",
		"@types/doubleclick-gpt": "2019111201.0.2",
		"@types/js-cookie": "3.0.3",
		"@types/mocha": "10.0.1",
		"@types/node": "18.14.6",
		"@types/sinon": "10.0.13",
		"@typescript-eslint/eslint-plugin": "5.54.1",
		"@typescript-eslint/parser": "5.54.1",
		"chai": "4.3.7",
		"css-loader": "6.7.3",
		"eslint": "8.35.0",
		"eslint-plugin-no-only-tests": "3.1.0",
		"fork-ts-checker-webpack-plugin": "8.0.0",
		"husky": "8.0.3",
		"instant-mocha": "1.5.0",
		"istanbul-instrumenter-loader": "3.0.1",
		"jsdom-global": "3.0.2",
		"lint-staged": "13.1.4",
		"mini-css-extract-plugin": "2.7.3",
		"mocha": "10.2.0",
		"mocha-jsdom": "2.0.0",
		"mocha-junit-reporter": "2.2.0",
		"node-sass": "8.0.0",
		"nyc": "15.1.0",
		"prettier": "2.8.4",
		"prettier-plugin-organize-imports": "3.2.2",
		"process": "0.11.10",
		"sass-loader": "13.2.0",
		"sinon": "15.0.1",
		"string-replace-loader": "3.1.0",
		"tsconfig-paths-webpack-plugin": "4.0.1",
		"tslib": "2.5.0",
		"typescript": "4.9.5",
		"webpack": "5.76.0",
		"webpack-bundle-analyzer": "4.8.0",
		"webpack-cli": "5.0.1",
		"webpack-dev-server": "4.11.1",
		"webpack-merge": "5.8.0"
	},
	"scripts": {
		"setup": "npm ci && npm run prepare",
		"build:platforms": "webpack --config webpack.platforms.js --mode=production",
		"dev:platforms": "webpack-dev-server --progress --config webpack.platforms.js --mode=development",
		"bundle-analyzer": "webpack --config webpack.platforms.js --mode=production --profile --json > .webpack-bundle-analyzer-stats.json && webpack-bundle-analyzer .webpack-bundle-analyzer-stats.json",
		"ci-check": "npm run test && npm run lint",
		"lint": "npx eslint . --ext .ts --max-warnings 0",
		"format": "npm run prettier",
		"prettier": "prettier --write '**/*.{ts,js,json,css,scss,html}'",
		"prepare": "husky install",
		"prebuild": "rm -rf dist",
		"preversion": "./maintenance/preversion.sh",
		"test": "instant-mocha './spec/**/*.spec.ts' -r jsdom-global/register --webpack-config webpack.common.js --require ./spec/helpers/sandbox-hook.js",
		"test:watch": "npm run test -- -w",
		"test-coverage": "nyc instant-mocha './src/!(platforms)*/**/*.ts' './src/platforms/shared/**/*.ts' './spec/**/*.spec.ts' -r jsdom-global/register --webpack-config webpack.coverage.js --require ./spec/helpers/sandbox-hook.js"
	},
	"lint-staged": {
		"*.ts": [
			"prettier --write",
			"npx eslint . --ext .ts --max-warnings 0 --fix"
		],
		"*.{js,json,css,scss,html}": [
			"prettier --write"
		]
	},
	"sideEffects": [
		"*.scss"
	]
}
