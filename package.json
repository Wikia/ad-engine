{
	"name": "@wikia/ad-engine",
	"version": "116.1.0",
	"description": "Wikia AdEngine",
	"license": "Apache-2.0",
	"sideEffects": [
		"*.scss"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/Wikia/AdEngine"
	},
	"dependencies": {
		"@babel/runtime-corejs2": "7.17.7",
		"@wikia/dependency-injection": "2.2.3",
		"@wikia/post-quecast": "2.0.1",
		"blockadblock": "^3.2.1",
		"core-decorators": "^0.20.0",
		"current-device": "0.10.2",
		"js-cookie": "3.0.1",
		"nanoid": "3.3.1",
		"rxjs": "7.5.2",
		"ts-action": "^11.0.0",
		"ts-action-operators": "^9.1.1"
	},
	"devDependencies": {
		"@alugha/ima": "1.1.2",
		"@babel/core": "7.16.5",
		"@babel/plugin-transform-runtime": "7.16.5",
		"@types/chai": "4.3.0",
		"@types/doubleclick-gpt": "2019111201.0.2",
		"@types/js-cookie": "2.2.1",
		"@types/mocha": "5.2.6",
		"@types/node": "8.10.54",
		"@types/sinon": "7.0.7",
		"@typescript-eslint/eslint-plugin": "5.9.1",
		"@typescript-eslint/parser": "5.18.0",
		"awesome-typescript-loader": "5.2.1",
		"babel-loader": "8.2.3",
		"chai": "^4.1.2",
		"css-loader": "6.7.1",
		"eslint": "8.6.0",
		"express": "4.17.2",
		"husky": "7.0.4",
		"instant-mocha": "1.4.1",
		"istanbul-instrumenter-loader": "3.0.1",
		"jsdom": "11.11.0",
		"jsdom-global": "^3.0.2",
		"jwplayer-fandom": "github:wikia/jwplayer-fandom#1.7.0",
		"lint-staged": "12.3.7",
		"mini-css-extract-plugin": "2.5.3",
		"mocha": "9.2.1",
		"mocha-jsdom": "^2.0.0",
		"mocha-junit-reporter": "2.0.2",
		"node-sass": "7.0.1",
		"nyc": "15.1.0",
		"prettier": "1.19.1",
		"process": "0.11.10",
		"sass-loader": "^12.6.0",
		"sinon": "4.1.4",
		"string-replace-loader": "3.1.0",
		"ts-node": "8.3.0",
		"tsconfig-paths": "3.8.0",
		"tslib": "1.10.0",
		"typescript": "3.9.10",
		"util": "0.12.4",
		"webpack": "5.69.1",
		"webpack-cli": "4.9.2",
		"webpack-dev-server": "4.7.4",
		"webpack-merge": "5.8.0"
	},
	"files": [
		"dist/",
		"lib/",
		"configs/",
		"maintenance/",
		"src/",
		".babelrc",
		"package.json",
		"webpack.config.js",
		".eslintrc.json"
	],
	"nyc": {
		"report-dir": "./spec/build/"
	},
	"scripts": {
		"dev:platforms": "webpack-dev-server --progress --config webpack.platforms.js --mode=development",
		"prebuild": "rm -rf dist",
		"build:platforms": "webpack --config webpack.platforms.js --mode=production",
		"ci-check": "npm run test && npm run lint",
		"lint": "npx eslint . --ext .ts --max-warnings 0",
		"prettier": "prettier --write '**/*.{ts,js,json,css,scss,html}'",
		"format": "npm run prettier",
		"preversion": "./maintenance/preversion.sh",
		"test": "instant-mocha --full-trace './spec/**/*.spec.ts' -r jsdom-global/register --webpack-config webpack.common.js",
		"test:watch": "npm run test -- -w",
		"test-coverage": "nyc instant-mocha './spec/**/*.spec.ts' -r jsdom-global/register --webpack-config webpack.common.coverage.js"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.ts": [
			"prettier --write",
			"npx eslint . --ext .ts --max-warnings 0 --fix"
		],
		"*.{js,json,css,scss,html}": [
			"prettier --write"
		]
	}
}
