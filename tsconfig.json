{
	"compilerOptions": {
		"outDir": "./dist/",
		"sourceMap": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "es5",
		"baseUrl": ".",
		"resolveJsonModule": true,
		"experimentalDecorators": true,
		"paths": {
			"@wikia/*": ["src/*"],
			"*": ["node_modules/*", "src/types/*"]
		},
		"lib": ["es7", "dom", "es2017.object"]
	},
	"exclude": ["node_modules", "tmp", "dist"]
}
