{
	"extends": "./configs/tsconfig.json",
	"compilerOptions": {
		"outDir": "dist",
		"lib": ["es2015", "es2016", "es2017", "dom"],
		"sourceMap": true,
		"declaration": true,
		"declarationDir": "dist/types",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"resolveJsonModule": true,
		"noImplicitAny": false,
		"baseUrl": "src",
		"paths": {
			"@wikia/ad-engine": ["ad-engine"],
			"@wikia/ad-bidders": ["ad-bidders"],
			"@wikia/ad-products": ["ad-products"],
			"@wikia/ad-services": ["ad-services"]
		},
		"typeRoots": ["node_modules/@types", "@types"]
	},
	"include": ["src"]
}
