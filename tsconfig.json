{
	"extends": "./configs/tsconfig.json",
	"compilerOptions": {
		"outDir": "dist",
		"sourceMap": true,
		"allowJs": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"resolveJsonModule": true,
		"noImplicitAny": false,
		"baseUrl": ".",
		"noUnusedLocals": true,
		"paths": {
			"@ad-engine/core": ["src/ad-engine"],
			"@wikia/ad-engine": ["src/index.ts"],
			"@wikia/ad-tracking": ["src/ad-tracking"]
		},
		"typeRoots": ["node_modules/@types", "@types"]
	},
	"include": ["src", "spec", "platforms", "examples"],
	"exclude": ["**/dist/**/*"]
}
