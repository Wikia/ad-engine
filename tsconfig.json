{
	"extends": "./configs/tsconfig.json",
	"compilerOptions": {
		"outDir": "dist",
		"lib": ["es2015", "es2016", "es2017", "dom"],
		"sourceMap": true,
		"declaration": true,
		"declarationDir": "dist/types",
		"allowJs": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"resolveJsonModule": true,
		"noImplicitAny": false,
		"baseUrl": ".",
		"typeRoots": ["node_modules/@types", "@types"]
	}
}
