{
	"extends": "./configs/tsconfig.json",
	"compilerOptions": {
		"outDir": "dist",
		"sourceMap": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"downlevelIteration": true,
		"noImplicitAny": false,
		"baseUrl": ".",
		"noUnusedLocals": true,
		"keyofStringsOnly": true,
		"skipLibCheck": true,
		"typeRoots": ["node_modules/@types", "@types"],
		"paths": {
			"@ad-engine/core": ["src/ad-engine"],
			"@ad-engine/services": ["src/ad-services"],
			"@ad-engine/tracking": ["src/ad-tracking"],
			"@ad-engine/communication": ["src/communication"],
			"@ad-engine/models": ["src/models"],
			"@wikia/ad-engine": ["src/index.ts"],
			"@platforms/shared": ["platforms/shared/index.ts"],
			"@wikia/*": ["src/*"]
		}
	},
	"include": ["src", "spec", "platforms"],
	"exclude": ["**/dist/**/*"]
}
