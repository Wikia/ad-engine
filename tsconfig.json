{
	"compilerOptions": {
		"outDir": "./dist",
		"sourceMap": true,
		"module": "es2015",
		"moduleResolution": "node",
		"target": "es5",
		"resolveJsonModule": true,
		"experimentalDecorators": true,
		"noImplicitAny": false,
		"baseUrl": ".",
		"typeRoots": ["node_modules/@types", "@types"],
		"paths": {
			"@wikia/*": ["src/*"]
		},
		"lib": ["dom", "es2017.object", "es7"]
	},
	"exclude": ["node_modules", "tmp", "dist", "@types", "maintenance/tslint-rules"]
}
