{
	"rulesDirectory": ["node_modules/tslint-ban-snippets/dist/lib"],
	"extends": "./configs/tslint.json",
	"rules": {
		"no-implicit-dependencies": [true, ["@wikia/ad-engine"]],
		"only-arrow-functions": {
			"severity": "warning",
			"options": ["allow-declarations", "allow-named-functions"]
		},
		"typedef": {
			"severity": "warning",
			"options": ["call-signature"]
		},
		"no-shadowed-variable": {
			"severity": "warning"
		},
		"no-bitwise": {
			"severity": "warning"
		},
		"no-unnecessary-initializer": {
			"severity": "warning"
		},
		"no-parameter-reassignment": {
			"severity": "warning"
		},
		"object-shorthand-properties-first": {
			"severity": "warning"
		},
		"prefer-conditional-expression": {
			"severity": "warning"
		},
		"no-use-before-declare": {
			"severity": "warning"
		},
		"no-this-assignment": {
			"severity": "warning"
		},
		"max-classes-per-file": {
			"severity": "warning"
		},
		"no-default-export": {
			"severity": "warning"
		},
		"tsl-ban-snippets": [
			true,
			{
				"banned": [
					{
						"snippets": ["localStorage"],
						"excludePaths": ["/src/ad-engine/services/local-storage.ts"]
					}
				]
			}
		]
	},
	"linterOptions": {
		"exclude": ["dist/", "lib/", "node_modules/", "jspm_packages/", "src/**/*.js"]
	}
}
